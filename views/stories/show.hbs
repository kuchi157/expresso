<div class="container ">
    <div class="row">
        <div class="col s12 m8">


            <h3>{{story.title}}
                <small>{{{editIcon story.user user story._id false}}}</small>
            </h3>
            <div class="card story">
                <div class="card-content">
                    <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                    {{{story.body}}}
                </div>

            </div>
            <div>{{#if comment}}
                <table class="striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>


                        </tr>
                    </thead>
                    <tbody>
                        {{#each comment}}
                        <tr>
                            <td>{{commentusername}}: </td>
                            <td>
                                {{content}}

                            </td>

                            <td>




                                <form action="/stories/comment/{{_id}}" method="POST" id="delete-form">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn red btn-float-right">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>

                                <a href="comment/{{_id}}" class="btn grey btn-float-right" title="report"><i
                                        class="fa fa-flag" aria-hidden="true"></i> </a>


                            </td>



                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <p>No comments on the expresso</p>
                {{/if}}</div>
            <div>

                <div class="row">


                    <form action={{data}} method="POST" class="col s12">
                        <div class="row">
                            <div class="input-field">
                                <h5>Add a Comment:</h5>
                                <textarea id="content" name="content"></textarea>
                            </div>
                        </div>

                        <div class="row">
                            <input type="submit" value="Save" class="btn">

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>