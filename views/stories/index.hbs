<div>
    {{#if check}}
    <div class="mybackground3">
        <div class="container mymargin-top">
            <h1><span class="white-text text-darken-2 ">Read, Help and Spread Happiness!!!!</span></h1>
            <div class="row">
                {{#each stories}}
                <div class="col s12 m4">
                    <div class="card">
                        <div class="card-image">
                            {{{editIcon user ../user _id}}}
                        </div>
                        <div class="card-content center-align">
                            <h5>{{title}}</h5>
                            <p>{{stripTags (truncate body 150)}}</p>

                        </div>
                        <div class="card-action center-align">
                            <a href="/stories/{{_id}}" class="btn grey">Read More</a>
                        </div>
                    </div>
                </div>
                {{else}}
                <p>No stories to display</p>
                {{/each}}
            </div>
        </div>
    </div>
    {{else}}
    <div class="mybackground4">
        <div class="container mymargin-top">
            <h1><span class="white-text text-darken-2 ">Read, Help and Spread Happiness!!!!</span></h1>
            <div class="row">
                {{#each stories}}
                <div class="col s12 m4">
                    <div class="card">
                        <div class="card-image">
                            {{{editIcon user ../user _id}}}
                        </div>
                        <div class="card-content center-align">
                            <h5>{{title}}</h5>
                            <p>{{stripTags (truncate body 150)}}</p>

                        </div>
                        <div class="card-action center-align">
                            <a href="/stories/{{_id}}" class="btn grey">Read More</a>
                        </div>
                    </div>
                </div>

                {{else}}
                <p><span class="white-text text-darken-2 ">No stories to display</span></p>
                {{/each}}
            </div>
        </div>
        <div class="mypad"></div>
    </div>


    {{/if}}
</div>